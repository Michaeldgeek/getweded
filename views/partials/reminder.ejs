<div class="auth-homepage-checklist">
    <div class="row pb-2">
        <div class="col-xs-6 above-module-title testing-module-title strong">YOUR NEXT TO-DOs</div>
        <div class="col-xs-6 text-right">
            <a class="testing-checklist-tool-link" data-gtm-event="Click" data-gtm-category="Auth Homepage" data-gtm-action="Clicks Go to Checklist"> </a>
        </div>
    </div>
    <div class="row no-margin module pr-0 pb-0 pl-0" ng-controller="ReminderCtrl">
        <div class="col-xs-12 px-0">
            <div class="checklist-items">
                <ul class="list-group">
                    <li class="list-group-item pb-0">
                        <div class="col-xs-6 text-muted pl-0 pb-2">
                            <a class="testing-checklist-done-count" data-gtm-event="Click" data-gtm-category="Checklist" data-gtm-action="Viewed done tasks">
                                <!-- react-text: 291 -->{{count}}
                                <!-- /react-text -->
                                <!-- react-text: 292 -->Done
                                <!-- /react-text -->
                            </a>
                        </div>
                        <div class="col-xs-6 progress-label text-muted text-right pr-0 testing-checklist-count">
                            <!-- react-text: 294 -->{{items.length}}
                            <!-- /react-text -->
                            <!-- react-text: 295 -->To-Dos
                            <!-- /react-text -->
                        </div>
                        <div class="row">
                            <div class="col-xs-12 testing-checklist-progress">
                                <div class="progress">
                                    <div role="progressbar" class="progress-bar progress-bar-success" aria-valuenow="{{count}}" aria-valuemin="0" aria-valuemax="{{items.length}}" style="width: {{count / items.length * 100}}%;"></div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item align-items-center py-4">
                        <div class="vertical flip">
                            <div class="card ">
                                <div class="face front">
                                    <div class="testing-checklist-item-0 ">
                                        <div class="row">
                                            <div class="col-xs-12 px-0 align-items-center item-min-area">
                                                <div class="col-xs-8 px-0">
                                                    <div class="item-text pb-2" style="font-size: 14px; font-weight: 400">{{nextItem}}</div>
                                                </div>
                                                <div class="col-xs-4 px-0 checklist-date text-right">
                                                    <span class=" pr-2 testing-item-date">{{nextDate}}</span>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>